@model IEnumerable<SiteMedico.Models.Estados>

@{
    ViewBag.Title = "Cadê Meu Médico ? - Lista de Estados";
}
<style>
    body {
        font-family: Elephant !important;
    }

    h2 {
        color: #262262;
    }
</style>
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Adicionar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sigla)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paises.Pais)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sigla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paises.Pais)
            </td>
            <td>
                @Html.ActionLink("Edit", "Editar", new { id = item.EstadoId }) |
                @Html.ActionLink("Details", "Details", new { id = item.EstadoId }) |
                @Html.ActionLink("Delete", "Excluir", new { id = item.EstadoId })
            </td>
        </tr>
    }

</table>
