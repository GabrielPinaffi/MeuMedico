@model SiteMedico.Models.Usuarios

@{
    ViewBag.Title = "Cadê Meu Médico? - Login";
}
<style>
    button {
        width: 100px;
        border: #262262 1px solid !important;
        background-color: #669eb7;
    }

    button:hover {
        background-color: #262262;
        color: white !important;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>Login</h2>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-5" style="margin:0px 0 0 100px;">
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", placeholder = "Login ou Email", type = "text" } })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-5" style="margin:10px 0 0 100px;">
                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", placeholder = "Senha", type = "password" } })
                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <button type="submit" value="Login" class="btn" style="margin:10px 0 0 100px;"> Enviar </button>
}

@if(ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
        
    </script>
}


