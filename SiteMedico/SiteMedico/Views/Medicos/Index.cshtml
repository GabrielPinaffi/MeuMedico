@model IEnumerable<SiteMedico.Models.Medicos>

@{
    ViewBag.Title = "Cadê Meu Médico ? - Lista de Médicos";
}
<style>
    body {
        font-family: Elephant !important;
    }

    h2 {
        color: #262262;
    }
</style>
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Adicionar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CRM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bairro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AtendePorConvenio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TemClinica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WebsiteBlog)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidades.Cidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especialidades.Especialidade)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CRM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AtendePorConvenio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TemClinica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WebsiteBlog)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidades.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidades.Especialidade)
            </td>
            <td>
                @Html.ActionLink("Edit", "Editar", new { id = item.MedicoId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MedicoId }) |
                @Html.ActionLink("Delete", "Excluir", new { id = item.MedicoId })
            </td>
        </tr>
    }

</table>
